<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>mRingo - Magic of Music</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    

</head>
<body>
    <div class="container-fluid" id="blackBox">

        <!-- Navbar -->

        <div class="navbar navbar-fixed-top active" id="custom-navbar">

            <div class="container-fluid">

                <div class="navbar-header">
                    @Html.ActionLink("mRingo", "Index", "Home", null, new { @class = "navbar-brand" })
                    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                </div>

                <div class="collapse navbar-collapse">

                    <ul class="nav navbar-nav">

                        <li class="dropdown">
                            <a class="custom-nav-font dropdown-toggle" data-toggle="dropdown" href="#">
                                <span class="glyphicon glyphicon-map-marker"></span>
                                Choose your State, Country
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">USA</a></li>
                                <li><a href="#">India</a></li>
                                <li><a href="#">Europe</a></li>
                            </ul>
                        </li>

                    </ul>
                    @Html.Partial("_LoginPartial")
                    
                </div>

            </div>

        </div>

        <!-- Page content -->
        <div class="container-fluid">
            @RenderBody()
            
            <!-- Footer -->

            <footer id="footer">
                <div class="container-fluid">
                    <div id="footer-links">
                        @Html.ActionLink("About us", "About", "Home", null)
                        @Html.ActionLink("FAQs", "Faqs", "Home", null)
                        @Html.ActionLink("Terms of Use", "Terms", "Home", null)
                        @Html.ActionLink("Testimonials", "Testimonials", "Home", null)
                        @Html.ActionLink("Contact us", "Inquiry", "Home", null)
                    </div>

                    <div id="footer-social" class="pull-right">
                        <a href="#"><i class="fa fa-facebook fa-lg"></i></a>
                        <a href="#"><i class="fa fa-twitter fa-lg"></i></a>
                        <img id="appstore" src="~/Content/images/appstore.png" />
                    </div>

                    <div class="clear"></div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
    
    
</body>
</html>
